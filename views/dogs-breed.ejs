<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head.ejs', { title: 'Dog' }) %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="mt-3 mb-3 text-center">
        <div class="row">
          <div class="col-6">
            <img
              src="<%= image %>"
              class="rounded mx-auto dog-image d-block img-fluid mb-3"
              alt="Responsive image"
            />
          </div>
          <div class="col-6">
            <select class="select-dog">
              <% list.forEach(function(option){ %>
              <option value="<%= option %>"><%= option %></option>
              <% }); %>
            </select>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
